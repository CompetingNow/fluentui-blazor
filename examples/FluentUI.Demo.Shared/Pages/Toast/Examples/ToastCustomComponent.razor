@inject ToastManager ToastManager

<FluentButton Appearance=Appearance.Neutral @onclick="@(() => ToastManager.ShowToast<MyToastComponent>(settings => { settings.Timeout = 5;}))">Custom Toast</FluentButton>
<FluentButton Appearance=Appearance.Neutral @onclick="@(() => ToastManager.ShowToast<MyToastComponent>(_toastParameters, settings => { settings.Timeout = 5; }))">Custom Toast with parameters</FluentButton>


@code {
    private ToastParameters _toastParameters = default!;


    protected override void OnInitialized()
    {
        _toastParameters = new CustomToastParameters("I'm a custom toast component with parameters")
        .Add(nameof(MyToastComponent.ToastParam), "I'm a parameter");
    }
}