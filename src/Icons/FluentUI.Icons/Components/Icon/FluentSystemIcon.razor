@namespace Microsoft.Fast.Components.FluentUI
@inherits FluentComponentBase

@if (Icon.IsSystemIcon())
{
    <svg id="@Id" class="@ClassValue" style="@StyleValue" focusable="false" viewBox="@($"0 0 {Size} {Size}")" aria-hidden="true" @attributes="@AdditionalAttributes">
        @if (!string.IsNullOrEmpty(Title))
        {
            <title>@Title</title>
        }
        @((MarkupString)@Icon)
    </svg>
}
else
{
    <span id="@Id" class="@ClassValue" style="@StyleValue" title="@Title" @attributes="@AdditionalAttributes">@((MarkupString)@Icon)</span>
}