@namespace Microsoft.Fast.Components.FluentUI

@inherits FluentComponentBase

<FluentLayout Class="@ClassValue" Style="@StyleValue">
    <FluentHeader Height="@HeaderHeight">
        @Header
    </FluentHeader> 
    
    @SubHeader
    
    <FluentStack Orientation="Orientation.Horizontal" Width="100%" Class="main-layout-stack-panel" HorizontalGap="0">
        <FluentNavMenu Width="200" Collapsible="true" Class="main-layout-navmenu" Title="@NavMenuTitle">
            @NavMenuContent
        </FluentNavMenu>
        
        <FluentBodyContent>
            @Body
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>